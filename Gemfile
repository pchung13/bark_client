source :rubygems

gem "faraday"
gem "json"
gem "faraday_middleware"
gem "serialport"
gem "colored"
gem "shotgun"

group :webapp do
  gem "thin"
  gem "sinatra"
  gem "sinatra-reloader", :require => 'sinatra/reloader'
  gem "mustache"
end

group :socket do
  gem "em-websocket"
end

group :test do
  gem "guard"
  gem "rspec"
  gem "guard-rspec"
  gem "webmock", :require => "webmock/rspec"
end
